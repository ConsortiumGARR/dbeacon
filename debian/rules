#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# This file is public domain software, originally written by Joey Hess. 

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PREFIX = /usr

DESTDIR = $(CURDIR)/debian/dbeacon
DESTDIR_MATRIX = $(CURDIR)/debian/dbeacon-matrix

export PREFIX DESTDIR

build: build-stamp
build-stamp:
	dh_testdir

	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) install

	dh_installdocs $(CURDIR)/README
	dh_installdocs $(CURDIR)/docs/FAQ
	dh_installdocs $(CURDIR)/docs/FAQ.html

	dh_installman $(CURDIR)/docs/dbeacon.1

	install -D contrib/matrix.pl $(DESTDIR_MATRIX)/usr/share/dbeacon-matrix/matrix.pl
	dh_installman -p dbeacon-matrix $(CURDIR)/docs/matrix.conf.5
	dh_installexamples -p dbeacon-matrix $(CURDIR)/contrib/matrix.conf.sample

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_link -i
	dh_strip -i
	dh_compress -i
	dh_fixperms -i
	dh_perl -i
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs -a
	dh_link -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_perl -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
